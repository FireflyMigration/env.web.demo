{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "label": "generate component",
            "type":"shell",
            "command":"ng",
            "args":[
                "g",
                "component",
                "--skipTests=true",
                "${input:componentName}"
            ],
            "problemMatcher":[]
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "copyFilesToMVC",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "generate-component",
            "problemMatcher": []
        }
    ],
    "inputs": [{
        "id":"componentName",
        "description": "please select component name",
        "type": "promptString"
    }]
}